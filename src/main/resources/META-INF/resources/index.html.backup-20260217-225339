<body>
  <main class="app-frame">
    <section id="start-screen" class="screen">
      <img id="start-image" class="scene-image" src="./AOG.jpg" alt="">
      <button id="start-button" class="start-btn" type="button">Iniciar</button>
    </section>

    <section id="adventure-screen" class="screen" aria-hidden="true">
      <img id="adventure-image" class="scene-image" src="./Aventura01.png" alt="">
      <div class="adventure-actions">
        <button id="map-button" class="start-btn" type="button">Ver mapa</button>
      </div>
    </section>

    <div id="map-overlay" class="map-overlay" aria-hidden="true">
      <button id="close-map-button" class="start-btn close-map-btn" type="button">Fechar</button>
      <img class="map-image" src="./mapa01.jpg" alt="Mapa da aventura">
    </div>
  </main>

  <audio id="adventure-audio" src="./Aventura1.mp3" preload="auto"></audio>

  <script>
    const startButton = document.getElementById("start-button");
    const mapButton = document.getElementById("map-button");
    const closeMapButton = document.getElementById("close-map-button");
    const appFrame = document.querySelector(".app-frame");
    const startImage = document.getElementById("start-image");
    const adventureImage = document.getElementById("adventure-image");
    const mapImage = document.querySelector(".map-image");
    const startScreen = document.getElementById("start-screen");
    const adventureScreen = document.getElementById("adventure-screen");
    const mapOverlay = document.getElementById("map-overlay");
    const adventureAudio = document.getElementById("adventure-audio");
    const zoomByElement = new Map([
      [startImage, 1],
      [adventureImage, 1],
      [mapImage, 1]
    ]);

    function applyZoom(element, value) {
      const clamped = Math.min(4, Math.max(1, value));
      zoomByElement.set(element, clamped);
      element.style.setProperty("--zoom", clamped.toFixed(2));
    }

    function getActiveZoomElement() {
      if (mapOverlay.classList.contains("visible")) return mapImage;
      if (adventureScreen.classList.contains("visible")) return adventureImage;
      return startImage;
    }

    function startAdventure() {
      startScreen.classList.add("hidden");
      adventureScreen.classList.add("visible");
      adventureScreen.setAttribute("aria-hidden", "false");

      const playPromise = adventureAudio.play();
      if (playPromise && typeof playPromise.catch === "function") {
        playPromise.catch((error) => {
          console.error("Nao foi possivel reproduzir o audio:", error);
        });
      }
    }

    startButton.addEventListener("click", startAdventure, { once: true });
    mapButton.addEventListener("click", () => {
      mapOverlay.classList.add("visible");
      mapOverlay.setAttribute("aria-hidden", "false");
    });
    closeMapButton.addEventListener("click", () => {
      mapOverlay.classList.remove("visible");
      mapOverlay.setAttribute("aria-hidden", "true");
    });

    appFrame.addEventListener("wheel", (event) => {
      event.preventDefault();
      const element = getActiveZoomElement();
      const currentZoom = zoomByElement.get(element) || 1;
      const delta = event.deltaY < 0 ? 0.12 : -0.12;
      applyZoom(element, currentZoom + delta);
    }, { passive: false });
  </script>
</body>
</html>
