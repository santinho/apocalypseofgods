      --btn-text: #ffffff;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html, body {
      width: 100%;
      height: 100%;
      min-height: 100%;
      overflow: hidden;
      font-family: "Trebuchet MS", "Segoe UI", sans-serif;
      background: #000;
    }

    body {
      display: grid;
      place-items: center;
    }

    .app-frame {
      position: relative;
      width: min(100vw, calc(100dvh * 9 / 16));
      height: min(100dvh, calc(100vw * 16 / 9));
      aspect-ratio: 9 / 16;
      background: #000;
      overflow: hidden;
    }

    .screen {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: flex-end;
      justify-content: center;
      padding: 24px;
      transition: opacity 260ms ease;
      background: #000;
    }

    .screen.hidden {
      opacity: 0;
      pointer-events: none;
    }

    .scene-image {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      object-fit: contain;
      object-position: center;
      transform: scale(var(--zoom, 1));
      transform-origin: center;
      user-select: none;
      pointer-events: none;
    }

    #adventure-screen {
      opacity: 0;
      pointer-events: none;
    }

    #adventure-screen.visible {
      opacity: 1;
